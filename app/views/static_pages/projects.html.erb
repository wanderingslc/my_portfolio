<% content_for :title, 'Projects : Ruby on Rails Stan Martineau' %>
<% content_for :description, 'Projects that Stan Martineau has built Ruby on Rails Javascript HTML5 Responsive' %>
<h1>StaticPages#projects</h1>
<p>Find me in app/views/static_pages/projects.html.erb</p>
<%= link_to "Rose Hill Rally", "http://wanderingslc.github.io/class-bike-rose/" %>
<div id="myCarousel" class="carousel slide"> 
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="item active">
          <%= image_tag('cycle.png', class: 'img-responsive img-polaroid', :alt => 'First Slide', :height => '60%') %>
          <div class="container">
            <div class="carousel-caption">
              <h1>Rose Hill Rally</h1>
              <p>One of the first class projects I made, for a pretend cycling club.</p>
              <p><a class="btn btn-large btn-primary" href="#">Sign up today</a></p>
            </div>
          </div>
        </div>
        <div class="item ">
          <%= image_tag('pizza.png', class: 'img-responsive img-polaroid', :alt => 'Second Slide') %>
          <div class="container">
            <div class="carousel-caption">
              <h1>Pizza Order Form</h1>
              <p>A simple online ordering form for a pretend pizza parlor.</p>
              <p><a class="btn btn-large btn-primary" href="#">Learn more</a></p>
            </div>
          </div>
        </div>
        <div class="item ">
          <%= image_tag('camshots.png', class: 'img-responsive img-polaroid', :alt => 'Third Slide') %>
          <div class="container">
            <div class="carousel-caption">
              <h1>Camshots</h1>
              <p>Simple site for basic photography information</p>
              <p><a class="btn btn-large btn-primary" href="#">Browse gallery</a></p>
            </div>
          </div>
        </div>
      </div>
      <a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
    </div><!-- /.carousel -->